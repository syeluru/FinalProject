        </th>
    </tr>

    @foreach (Album album in Model.Albums)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => album.AlbumName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => album.AlbumArtists)
            </td>

            <td>
                @Html.DisplayFor(modelItem => album.AlbumPrice)
            </td>

            <td>
                @Html.DisplayFor(modelItem => album.AlbumGenres)
            </td>
        </tr>
    }

</table>

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Genre(s)
        </th>
    </tr>

    @foreach (Artist artist in Model.Artists)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => artist.ArtistName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => artist.ArtistGenres)
            </td>
        </tr>
    }

</table>



