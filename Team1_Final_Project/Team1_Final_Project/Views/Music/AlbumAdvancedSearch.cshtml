@using Team1_Final_Project.Controllers
@{
    ViewBag.Title = "AlbumAdvancedSearch";
}

<h2>Album Advanced Search</h2>

@using (Html.BeginForm("AlbumAdvancedSearchResults", "Music", FormMethod.Get))
{
    <p class="form-group">
        Album Name: <br />@Html.TextBox("AlbumSearchString", null, new { @class = "form-control" }) <br />

        Genre: <br />@Html.ListBox("SelectedGenres", (MultiSelectList)ViewBag.AllGenres, new { @class = "form-control" }) <br />

        Artist: <br />@Html.TextBox("ArtistSearchString", null, new { @class = "form-control" })<br />
        
        <div class="form-group">
            <div class="form-check">
                <p>Operation</p>
                <label class="form-check-label">
                    @Html.RadioButton("SelectedAlbumRatingOperation", Operation.GreaterThan, true, new { @class = "form-check-input" }) Greater Than <br />
                </label>
                <br />
                <label class="form-check-label">
                    @Html.RadioButton("SelectedAlbumRatingOperation", Operation.LessThan, new { @class = "form-check-input" }) Less Than
                </label>
            </div>
        </div>

    Album Rating: <br />@Html.TextBox("AlbumRatingDec", null, new { @class = "form-control" }) <br />

    Sort By: <br />

    <div class="form-check">
        <label class="form-check-label">
            @Html.RadioButton("SelectedSortOrder", SortOrder.AscendingName, true, new { @class = "form-check-input" }) Ascending by Album Name
        </label>
    </div>

    <div class="form-check">
        <label class="form-check-label">
            @Html.RadioButton("SelectedSortOrder", SortOrder.DescendingName, new { @class = "form-check-input" }) Descending by Album Name
        </label>
    </div>

    <div class="form-check">
        <label class="form-check-label">
            @Html.RadioButton("SelectedSortOrder", SortOrder.AscendingArtist, new { @class = "form-check-input" }) Ascending by Artist
        </label>
    </div>

    <div class="form-check">
        <label class="form-check-label">
            @Html.RadioButton("SelectedSortOrder", SortOrder.DescendingArtist, new { @class = "form-check-input" }) Descending by Artist
        </label>
    </div>

    <div class="form-check">
        <label class="form-check-label">
            @Html.RadioButton("SelectedSortOrder", SortOrder.AscendingRating, new { @class = "form-check-input" }) Ascending by Rating
        </label>
    </div>

    <div class="form-check">
        <label class="form-check-label">
            @Html.RadioButton("SelectedSortOrder", SortOrder.DescendingRating, new { @class = "form-check-input" }) Descending by Rating
        </label>
    </div>

    <input type="submit" value="Search" class="btn btn-default" />
    </p>

}


