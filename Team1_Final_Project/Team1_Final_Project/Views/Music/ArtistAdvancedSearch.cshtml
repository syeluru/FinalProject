@using Team1_Final_Project.Controllers

@{
    ViewBag.Title = "ArtistAdvancedSearch";
}

<h2>Artist Advanced Search</h2>

@using (Html.BeginForm("ArtistAdvancedSearchResults", "Music", FormMethod.Get))
{
    <p class="form-group">
        Artist Name: <br />@Html.TextBox("ArtistSearchString", null, new { @class = "form-control" }) <br />

        Genre: <br />@Html.ListBox("SelectedGenres", (MultiSelectList)ViewBag.AllGenres, new { @class = "form-control" }) <br />

    <div class="form-group">
        <div class="form-check">
            <p>Operation</p>
            <label class="form-check-label">
                @Html.RadioButton("SelectedArtistRatingOperation", Operation.GreaterThan, true, new { @class = "form-check-input" }) Greater Than <br />
            </label>
            <br />
            <label class="form-check-label">
                @Html.RadioButton("SelectedArtistRatingOperation", Operation.LessThan, new { @class = "form-check-input" }) Less Than
            </label>
        </div>
    </div>

        Artist Rating: <br />@Html.TextBox("ArtistRatingDec", null, new { @class = "form-control" }) <br />

        Sort By: <br />

        <div class="form-check">
            <label class="form-check-label">
                @Html.RadioButton("SelectedSortOrder", SortOrder.AscendingName, true, new { @class = "form-check-input" }) Ascending by Artist Name
            </label>
        </div>

        <div class="form-check">
            <label class="form-check-label">
                @Html.RadioButton("SelectedSortOrder", SortOrder.DescendingName, new { @class = "form-check-input" }) Descending by Artist Name
            </label>
        </div>

        <div class="form-check">
            <label class="form-check-label">
                @Html.RadioButton("SelectedSortOrder", SortOrder.AscendingRating, new { @class = "form-check-input" }) Ascending by Rating
            </label>
        </div>

        <div class="form-check">
            <label class="form-check-label">
                @Html.RadioButton("SelectedSortOrder", SortOrder.DescendingRating, new { @class = "form-check-input" }) Descending by Rating
            </label>
        </div>

    <input type="submit" value="Search" class="btn btn-default" />
    </p>

}




