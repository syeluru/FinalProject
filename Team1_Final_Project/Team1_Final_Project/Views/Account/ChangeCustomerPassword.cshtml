@using Team1_Final_Project.Models.Identity;

@{
    ViewBag.Title = "Change Customer Password";
    AppDbContext db = new AppDbContext();
    AppUser userToChange = db.Users.Find(ViewBag.Id);

}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ChangeCustomerPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Change Customer Password Form</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <p>Coming from the ChangeCustomerPassword: @ViewBag.TestMessage</p>
    <p style="color:red">@ViewBag.ErrorMessage</p>
    <p>Changing for @userToChange.FName</p>
    
    <input type="text" name="Id" value="@ViewBag.Id" style="display: none">
    <p>
        New Password: <input type="password" name="NewPassword" class="form-control" />
    </p>
    <p>
        Confirm Password: <input type="password" name="ConfirmPassword" class="form-control" />

    </p>
        

