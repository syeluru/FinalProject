@model IEnumerable<Team1_Final_Project.Models.Identity.AppUser>

@{
    ViewBag.Title = "Customers Index";
}

<h2>Customers Index</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@

<table class="table">
    <tr>
        <th>
            Customer Name
        </th>
        <th>
            Customer Email
        </th>
        <th>
            Customer Status
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FName)&nbsp;@Html.DisplayFor(modelItem => item.LName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAccountEnabled)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditFromEmployee", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

