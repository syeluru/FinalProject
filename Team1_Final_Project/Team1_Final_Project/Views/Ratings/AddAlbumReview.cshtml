@model Team1_Final_Project.Models.Rating.MusicRating

@{
    ViewBag.Title = "AddAlbumReview";
}


<h2>AddAlbumReview</h2>

@using (Html.BeginForm("AddAlbumReview", "Ratings", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>MusicRating</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.RatingNumber, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RatingNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RatingNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Review, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Review, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Review, "", new { @class = "text-danger" })
            </div>
        </div>

        <h5 style="color:red">@ViewBag.ErrorMessage</h5>

        <input type="number" name="AlbumID" value="@ViewBag.AlbumID" style="display:none" />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="AddAlbumReview" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
