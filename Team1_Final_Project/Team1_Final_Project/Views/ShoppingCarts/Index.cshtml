@model Team1_Final_Project.Models.Purchases.ShoppingCartViewModel

@{
    ViewBag.Title = "Index";
}
@if (ViewBag.ErrorMessage != null)
{
    <p style="color:red">@ViewBag.ErrorMessage</p>
}

<h2>Shopping Cart</h2>


<h3>Songs</h3>

<table class="table">
    <tr>
        <th>
            Song Title
        </th>
        <th>
           Artists
        </th>
        <th>
            Average Rating
        </th>
        <th>
            Price
        </th>
        <th></th>
    </tr>




    @foreach (var item2 in Model.SongsInShoppingCart)
    {
    <tr>
        <td>
            @item2.Song.SongName
        </td>
        @*need to fix the artists later*@
        <td>
            @item2.Song.SongArtists
        </td>
        <td>
            <!--Ratings -->
        </td>
        <td>
            @item2.Song.SongPrice
        </td>
        <td>
            @Html.ActionLink("Remove Song", "DeleteSong", new { SongID = item2.Song.SongID })
        </td>

    </tr>
    }
    
</table>

<h3>Albums</h3>

<table class="table">
    <tr>
        <th>
            Album Title
        </th>
        <th>
            Artists
        </th>
        <th>
            Average Rating
        </th>
        <th>
            Price
        </th>
        <th></th>
    </tr>

    @foreach (var item2 in Model.AlbumsInShoppingCart)
    {
        <tr>
            <td>
                @item2.Album.AlbumName
            </td>
            <td>
                @item2.Album.AlbumArtists
            </td>
            <td>
                <!--Ratings -->
            </td>
            <td>
                @item2.Album.AlbumPrice
            </td>
            <td>
                @Html.ActionLink("Remove Album", "DeleteAlbum", new { AlbumID = item2.Album.AlbumID })
            </td>
        </tr>
    }
    
</table>



<h3>Checkout!</h3>

@Html.ActionLink("Check out", "Checkout", "ShoppingCarts", null, new { @class = "btn btn-primary" })
@*<a class="btn btn-primary" href="~/Controllers/ShoppingCarts/CheckoutPage">Check out!</a>*@

<h3>Gift to Friend!</h3>
@Html.BeginForm("GiftCheckoutPage", "ShoppingCart", FormMethod.Get) 
{
    <div class="form-group">
        <input type="text" name="FriendEmail" class="form-control" placeholder="Email"> 
    </div>
    
    <input type="submit" value="Gift Checkout" />


}